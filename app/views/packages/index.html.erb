<div class="row">
    <div class="col-md-9 offset-md-1">
        <div class="card mt-5">
            <div class="card-body card-padding">
                <div class="row">
                    <% flash.each do |type, msg| %>
                    <div class="col-md-12">
                        <div class="alert <%= type == "alert" ? "alert-danger" : "alert-success"  %> role="alert">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <%= msg %>
                        </div>
                    </div>
                    <% end %>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="text-center text-primary"><i class="fas fa-box-open "></i> Seguimiento de Paquetes</h4>
                        <table class="table table-hover table-sm">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Paquetería</th>
                                    <th scope="col">Número de guía</th>
                                    <th scope="col">Estatus</th>
                                    <th scope="col">Descripción</th>
                                    <th scope="col">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%= render @packages %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>