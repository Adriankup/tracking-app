<%= form_for @package do |f| %>
<div class="row">
    <div class="col-md-12">
        <% flash.each do |type, msg| %>
        <div>
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                Ocurrió un error al procesar la información: <%= msg %>
            </div>

        </div>
        <% end %>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <%= f.label :file, "Archivo", class: 'control-label' %><br />
            <%= f.file_field :file, accept: 'json', class: 'form-control' %>
        </div>
    </div>
    <div class="col-md-12 text-right">
        <%= link_to "Atras", packages_path , class: "btn btn-danger"%>
        <%= f.button "Guardar".html_safe, type: :submit, data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Guardando..." }, class: 'btn btn-primary' %>
    </div>
</div>



<% end %>